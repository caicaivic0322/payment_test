# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Application Base URL
# Development
NEXT_PUBLIC_BASE_URL=http://localhost:3000
# Production (uncomment and update when deploying)
# NEXT_PUBLIC_BASE_URL=https://yourdomain.com

# ZPay Payment Configuration
# 如果您有真实的 ZPay 账号，请填写以下信息
ZPAY_PID=your_zpay_merchant_id
ZPAY_KEY=your_zpay_merchant_key

# 模拟支付模式（开发测试用）
# 如果暂时没有 ZPay 账号，可以设置为 true 使用模拟支付
# 模拟支付会直接创建成功的订单，无需跳转到真实支付页面
NEXT_PUBLIC_USE_MOCK_PAYMENT=false
